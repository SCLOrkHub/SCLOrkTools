namespace Confab.Data;

// Keep these the same as the enum in Confab::Asset
enum Type : uint {
    kInvalid = 1,
    kSnippet = 2,
    kImage = 3,
    kYAML = 4,
    kSample = 5
}

table FlatAsset {
    type:Type = kInvalid;

    key:ulong = 0;
    name:string;
    fileExtension:string;
    author:ulong = 0;
    deprecatedBy:ulong = 0;
    deprecates:ulong = 0;
    expiresOn:ulong = 0;
    salt:ulong = 0;
    size:uint = 0;
    chunks:uint = 0;

    inlineData:[ubyte];
}

root_type FlatAsset;

